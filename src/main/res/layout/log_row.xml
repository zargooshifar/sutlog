<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layoutDirection="ltr"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#eee">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:id="@+id/log_date_layout"
        android:visibility="visible"
        android:gravity="right|center">
        <ImageView
            android:layout_width="1sp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/solid_line"
            android:layout_alignParentRight="true"
            android:layout_marginRight="64sp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="64sp"
            android:layout_marginBottom="5sp"
            android:orientation="horizontal"
            >


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="جمعه 12 اردیبهشت"
                android:textSize="16sp"
                android:layout_marginRight="24sp"
                android:layout_marginLeft="24sp"
                android:id="@+id/tv_date"
                android:layout_alignParentEnd="true"

                />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1sp"
                android:layout_weight="1"
                android:background="@drawable/solid_line"
                android:layout_gravity="center_vertical"
                />
        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80sp"
        android:id="@+id/log_info_layout"
        android:visibility="visible"
        android:gravity="right|center">
        <ImageView
            android:layout_width="20sp"
            android:layout_height="match_parent"
            android:id="@+id/log_state"
            android:layout_marginTop="20sp"
            android:layout_marginBottom="15sp"
            android:background="#f00"
            android:layout_centerVertical="true"/>
        <ImageView
            android:layout_width="1sp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/solid_line"
            android:layout_alignParentRight="true"
            android:layout_marginRight="64sp"
            android:id="@+id/ver_line"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="right"
            android:layout_marginRight="24sp"
            android:orientation="horizontal"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:layout_marginRight="1sp"
                android:layout_marginBottom="2sp"
                android:layout_marginTop="2sp"
                android:layout_marginLeft="7sp"
                android:gravity="center|left"

                >
                <LinearLayout
                    android:clickable="true"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center|left"
                    android:background="@drawable/nav_bg"



                    android:id="@+id/log_row_layout"
                    android:orientation="horizontal"
                    android:padding="8sp">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"

                        >


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:visibility="gone"
                            android:id="@+id/log_false_state_layout">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Reason: "
                                    android:textSize="14sp"/>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/stroke"

                                    android:layout_marginRight="16sp"
                                    >

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="i dont know!"
                                        android:id="@+id/tv_kill"
                                        android:textSize="10sp"
                                        android:layout_margin="5sp"
                                        />

                                </LinearLayout>

                            </LinearLayout>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:id="@+id/log_true_state_layout"
                            android:visibility="visible">
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Download: "
                                    android:textSize="14sp"
                                    android:id="@+id/textView5" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="25 MB"
                                    android:id="@+id/tv_download"
                                    android:textSize="14sp"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginTop="2sp">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Upload: "
                                    android:textSize="10sp"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="25 MB"
                                    android:id="@+id/tv_upload"
                                    android:textSize="10sp"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginTop="2sp">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Duration: "
                                    android:textSize="10sp"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="25 MB"
                                    android:id="@+id/tv_duration"
                                    android:textSize="10sp"/>
                            </LinearLayout>
                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/device_name_layout">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/device_name"
                            android:text="گوشی من"
                            android:textSize="18sp"
                            android:layout_marginRight="10sp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_centerVertical="true"
                        android:id="@+id/log_ip_layout"
                        android:visibility="gone">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="IP: "
                                android:textSize="14sp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="127.0.0.1"
                                android:id="@+id/tv_ip"
                                android:textSize="14sp"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="2sp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Mac: "
                                android:textSize="10sp"
                                android:id="@+id/textView4" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="00:00:00:00:00"
                                android:id="@+id/tv_mac"
                                android:textSize="10sp"/>
                        </LinearLayout>


                    </LinearLayout>
                </LinearLayout>


            </android.support.v7.widget.CardView>


            <!--<com.akexorcist.roundcornerprogressbar.RoundCornerProgressBar-->
                <!--android:layoutDirection="rtl"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="6sp"-->
                <!--android:layout_weight="1.5"-->
                <!--android:layout_gravity="center_vertical"-->
                <!--android:indeterminate="true"-->

                <!--app:rcBackgroundPadding="1sp"-->
                <!--app:rcBackgroundColor="#b9b9b9"-->
                <!--app:rcProgressColor="#00FF00"-->
                <!--app:rcMax="100"-->
                <!--app:rcProgress="100"-->
                <!--android:id="@+id/log_statex"-->
                <!--/>-->
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1sp"
                android:layout_weight="1.5"
                android:layout_gravity="center_vertical"
                android:background="@drawable/solid_line"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="18:21"
                android:textSize="18sp"
                android:id="@+id/tv_time"
                android:layout_gravity="center_vertical"
                android:layout_alignParentRight="true"
                android:layout_marginRight="8sp"
                android:padding="5sp"
                android:background="#eee"/>
        </LinearLayout>

    </RelativeLayout>


</LinearLayout>