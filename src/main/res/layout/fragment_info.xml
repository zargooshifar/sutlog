

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#616161"

    tools:context="ir.zarg.serendipity.sutlog.fragments.mainFragments.infoFragment"
    >

    >


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:elevation="2sp"
        android:layoutDirection="ltr"
        android:background="#eeeeee"

        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvName"
            android:textSize="20sp"
            android:text="یعقوب زرگشی فر"
            android:layout_marginBottom="5sp"
            android:layout_gravity="right"
            android:layout_marginTop="15sp"
            android:layout_marginRight="50sp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="200sp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="مگابایت"
                android:textSize="10sp"

                android:id="@+id/textView"
                android:layout_above="@+id/usageProgress"
                android:layout_toStartOf="@+id/tvRemain"
                android:layout_gravity="bottom" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0000"
                android:id="@+id/tvRemain"
                android:textSize="50sp"
                android:textAlignment="center"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal" />

        </LinearLayout>

        <com.akexorcist.roundcornerprogressbar.RoundCornerProgressBar
            android:id="@+id/usageProgress"
            android:layout_height="40sp"
            android:layout_width="match_parent"
            app:rcBackgroundPadding="5sp"
            app:rcBackgroundColor="#b9b9b9"
            app:rcProgressColor="#00FF00"
            app:rcMax="100"
            app:rcProgress="100"
            android:layout_below="@+id/tvRemain"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="10sp"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="20sp"
            android:layout_gravity="center_horizontal"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="هرگز آپدیت نشده!"
            android:textSize="10sp"
            android:id="@+id/up_time"
            android:layout_marginLeft="30sp"
            android:layout_marginBottom="4sp"
            android:layout_marginTop="10sp"
            android:layout_gravity="left" />
<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_marginLeft="20sp"
    android:layout_marginRight="20sp"
    android:layout_marginBottom="20sp"
    >
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:paddingBottom="20sp"
        android:paddingTop="10sp"

        >

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="10sp"
            android:layout_marginLeft="50sp"
            android:layout_marginRight="50sp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="91001234"
                android:textSize="20sp"
                android:id="@+id/tvUsername"
                android:layout_gravity="left|bottom" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="نام کاربری:"
                android:id="@+id/textView7"
                android:textSize="16sp"
                android:layout_gravity="center_vertical|right"
                android:layout_marginLeft="5sp" />
        </GridLayout>



        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="10sp"
            android:layout_marginLeft="50sp"
            android:layout_marginRight="50sp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvStatus"
                android:layout_gravity="left|bottom"
                android:layout_row="0"
                android:layout_column="0"
                android:textSize="20sp"

                android:text="آفلاین" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ivStatus"
                android:layout_gravity="left|center_vertical"
                android:layout_marginLeft="5sp"
                android:src="@android:drawable/presence_offline" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="وضعیت اکانت:"
                android:textSize="16sp"
                android:id="@+id/textView9"
                android:layout_gravity="center_vertical|right"
                android:layout_marginLeft="5sp"
                android:layout_row="0"
                android:layout_column="2" />

        </GridLayout>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="10sp"
            android:layout_marginLeft="50sp"
            android:layout_marginRight="50sp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvLimit"
                android:layout_gravity="left|bottom"
                android:layout_row="0"
                android:layout_column="0"
                android:textSize="20sp"
                android:text="0000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ترافیک ماهانه: "
                android:textSize="16sp"
                android:id="@+id/textView10"
                android:layout_gravity="center_vertical|right"
                android:layout_marginLeft="5sp"
                android:layout_row="0"
                android:layout_column="2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MB"
                android:id="@+id/textView13"
                android:layout_row="0"
                android:layout_column="1"
                android:textSize="10sp"
                android:layout_gravity="top|left" />
        </GridLayout>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="10sp"
            android:layout_marginLeft="50sp"
            android:layout_marginRight="50sp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0000"
                        android:textSize="15sp"
                        android:id="@+id/tvSpeedDownload"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="KB/s"
                        android:textSize="15sp"
                        android:layout_marginLeft="2sp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="دانلود:"
                        android:textSize="15sp"
                        android:layout_marginLeft="10sp"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0000"
                        android:textSize="15sp"
                        android:id="@+id/tvSpeedUpload"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="KB/s"
                        android:textSize="15sp"
                        android:layout_marginLeft="2sp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="آپلود:"
                        android:textSize="15sp"
                        android:layout_marginLeft="10sp"
                        />
                </LinearLayout>



            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="پهنای باند اکانت"
                android:textSize="16sp"
                android:layout_gravity="center_vertical|right"
                android:layout_marginLeft="5sp" />
        </GridLayout>


        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="10sp"
            android:layout_marginLeft="50sp"
            android:layout_marginRight="50sp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="نامعلوم"
                android:textSize="16sp"
                android:id="@+id/tvReset"
                android:layout_gravity="left|bottom" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="شارژ بعدی:"
                android:textSize="16sp"
                android:layout_gravity="center_vertical|right"
                android:layout_marginLeft="5sp" />
        </GridLayout>




    </LinearLayout>



</android.support.v7.widget.CardView>


    </LinearLayout>

