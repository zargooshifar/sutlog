<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:layoutDirection="ltr">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100sp">

        <FrameLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:alpha="0.3"
            android:background="@drawable/black_shape"></FrameLayout>



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/switch_layout">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Login"
                android:id="@+id/widget_login_but"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Refresh"
                android:id="@+id/widget_refresh_but"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:orientation="horizontal"
            android:id="@+id/switch_layout">



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10sp"
                android:text=""
                android:id="@+id/widget_tv_update"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:orientation="vertical"
            android:paddingLeft="10sp"
            android:paddingTop="10sp">


            <ProgressBar
                android:id="@+id/widget_progressbar"
                style="?android:progressBarStyleHorizontal"
                android:layout_width="100sp"
                android:layout_height="51sp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="26sp"
                android:layout_marginLeft="25sp"
                android:layout_marginRight="25sp"
                android:indeterminate="false"
                android:max="200"

                android:paddingTop="50sp"
                android:progress="100"
                android:progressDrawable="@drawable/progress_cus_layout" />

            <TextView
                android:id="@+id/widget_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="15sp"
                android:layout_marginLeft="25sp"
                android:text="usage"
                android:textSize="25sp"
                android:layout_gravity="center" />

        </LinearLayout>

    </RelativeLayout>


</RelativeLayout>